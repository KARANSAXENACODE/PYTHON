print("Welcome to the Calculation Game!")
print("You will be given 3 questions. Let's see how many you can answer correctly!\n")

score = 0

# Question 1
print("Question 1: What is 5 + 3?")
answer1 = input("Your answer: ")

if answer1 == "8":
    print("Correct!")
    score = score + 1
else:
    print("Wrong! The correct answer is 8.")

# Question 2
print("\nQuestion 2: What is 12 - 7?")
answer2 = input("Your answer: ")

if answer2 == "5":
    print("Correct!")
    score = score + 1
else:
    print("Wrong! The correct answer is 5.")

# Question 3
print("\nQuestion 3: What is 4 * 6?")
answer3 = input("Your answer: ")

if answer3 == "24":
    print("Correct!")
    score = score + 1
else:
    print("Wrong! The correct answer is 24.")

# Final Score
print("\nGame Over!")
print("You got", score, "out of 3 correct.")

# Feedback
if score == 3:
    print("Excellent work!")
elif score == 2:
    print("Good job!")
elif score == 1:
    print("You can do better!")
else:
    print("Better luck next time!")
#END
